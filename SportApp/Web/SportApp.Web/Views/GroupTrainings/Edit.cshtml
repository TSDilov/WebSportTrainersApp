@model SportApp.Web.ViewModels.GroupTrainings.EditGroupTrainingInputModel
@{
    this.ViewData["Title"] = "Edit group training";
}
<h1 class="col-md-6 offset-md-3">Edit the training</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control" rows="5"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Place"></label>
        <input asp-for="Place" class="form-control">
        <span asp-validation-for="Place" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DaysOfWeek"></label>
        <input asp-for="DaysOfWeek" class="form-control">
        <span asp-validation-for="DaysOfWeek" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="StartHour"></label>
        <input asp-for="StartHour" class="form-control" />
        <span asp-validation-for="StartHour" class="text-danger"></span>
    </div>
    <br>
    <input type="hidden" asp-for="Id" />
    <input type="submit" class="btn btn-primary" value="Edit" />
</form>
